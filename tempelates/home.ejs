<body>
    <!-- header start -->
    <header>
        <a href="#" class="logo">WebShop</a>
        <ul class="navbar">
            <li><a href="#shop">Shop</a></li>
            <li><a href="#about">About</a></li>
            <li><a href="/sign">Sign up</a></li>
            <li><a href="#contact">Contact</a></li>
        </ul>

    </header>
    <!--shop start-->
    <section class="shop" id="shop">
        <div class="container">
            <% products.forEach((product)=> { %>
                <div class="box">
                    <img alt="" src="<%= product.imageURL %>">
                    <h4 class="name">
                        <%= product.title %>
                    </h4>
                    <span class="price">
                        <%= product.price%>$
                    </span>
                    <form action="/order" method="post">
                        <input type="text" name="productid" value="<%= product._id %>" style="display:none">
                        <input type="text" name="quantity" placeholder="Quantity" style="background-color: gainsboro;
                        color: black;"><br>
                        <input type="submit" style="padding-bottom: 24px;">
                    </form>
                </div>
                <% }) %>
        </div>
    </section>
    <!--about start-->
